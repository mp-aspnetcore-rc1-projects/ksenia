{% extends 'layout.twig' %}
    {% if  image is not defined %}
        {% set image = project.images[0] %}
    {% endif %}
{% block opengraph %}
    <meta property="og:image" content="{{ url('image_load',{imageId:image.id,extension:image.extension}) }}"/>
    <meta property="og:description" content="{{ image.description }}"/>
    <!--<meta property="og:type" content="image"/>-->
    {{ parent() }}
{% endblock %}
{% block twittercard %}
    <meta name="twitter:site" content="{{ app.settings.twitterUsername }}">
    <meta name="twitter:creator" content="{{ app.settings.twitterUsername }}">
    <meta name="twitter:card" content="photo"/>
    <meta name="twitter:title" content="{{ image.description }}"/>
    <meta name="twitter:image" content="{{ url('image_load',{imageId:image.id,extension:image.extension}) }}"/>
    {{ parent() }}
{% endblock %}
{% block content %}
    {% include 'noscript/project.twig' %}
    <div id="spinner" class="spinner hidden"></div>
    <main id="main"></main>
{% endblock %}
