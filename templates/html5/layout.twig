<!doctype html>
<html lang="{{ app.settings.language }}">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title app.settings.title ~ " - " ~ app.settings.subtitle %}</title>
    <meta name="description" content="{{ app.settings.subtitle }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="cleartype" content="on">
    <meta name="ROBOTS" content="INDEX, FOLLOW">
    <!--http://www.mattcutts.com//blog/google-supports-meta-noodp-tag/-->
    <meta name="robots" content="NOYDIR,NOODP"/>
    <!--favicon-->
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico"/>
    {% block opengraph %}

        <meta property="fb:app_id" content="{{ app.settings.facebookAppId }}"/>
        <meta property="og:site_name" content"{{ app.settings.title }}"/>
        <meta property="og:url" content="{{ app.request.uri }}"/>
        <meta property="og:title" content="{{ app.settings.title }}"/>
        {% if image is defined %}
            <meta property="og:image" content="{{ url('image_load',{imageId:image.id,extension:image.extension}) }}"/>
            <meta property="og:description" content="{{ image.description }}"/>
        {% else %}
            <meta property="og:description" content="{{ app.settings.subtitle }}"/>
        {% endif %}
        <!--google verification -->
        <meta name="google-site-verification" content="{{ app.settings.googleSiteVerification }}"/>
    {% endblock %}
    {% block twittercard %}
        {% if image is defined %}
            <meta name="twitter:site" content="{{ app.settings.twitterUsername }}">
            <meta name="twitter:creator" content="{{ app.settings.twitterUsername }}">
            <meta name="twitter:card" content="photo"/>
            <meta name="twitter:title" content="{{ image.description }}"/>
            <meta name="twitter:image" content="{{ url('image_load',{imageId:image.id,extension:image.extension}) }}"/>
        {% endif %}
    {% endblock %}
    {% block styles %}
        <!-- STYLES -->

    {% endblock %}
    {% block scripts %}
        <!-- SCRIPTS -->
        <script defer src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <script defer src="/bower_components/jquery.scrollTo/jquery.scrollTo.min.js"></script>
        <script defer src="//cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.min.js"></script>
        <script defer src="//cdnjs.cloudflare.com/ajax/libs/backbone.js/1.1.2/backbone-min.js"></script>
        <script defer src="//cdnjs.cloudflare.com/ajax/libs/showdown/0.3.1/showdown.min.js"></script>
        <script defer src="/static/javascript/Model.js"></script>
        <script defer src="/static/javascript/index.js"></script>
        <!-- scripts -->
        <script defer type="text/javascript">
            var Config = {
                version: "{{app.ksu.version}}",
                title: "{{app.settings.title}}",
                subtitle: "{{app.settings.subtitle}}",
                contactEmail: "{{app.settings.contactEmail}}",
                projectResource: "{{path('public_project_resource')}}",
                pageResource: "{{path('public_page_resource')}}",
                menuResource: "{{ path('public_menu_resource') }}",
                googleAnalyticsId: "{{app.settings.googleAnalyticsId}}"
            }
        </script>
    {% endblock %}
</head>
<body>
