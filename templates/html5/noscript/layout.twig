{% set menus = app.menuService.findAllPublishedMenus() %}
<noscript>
    <h1 class="container text-warning">This page relies heavily on Javascript,Please turn it on.</h1>
    <section class=" head">
        <header class="container" style="display: block;">
            <nav>
                <ul id="main-menu" class="nav">
                    {% for menu in menus %}
                        {% if menu.isMain %}
                            {% for link in menu.links %}
                                {% if link.type == "menu" %}
                                    <li><a href="javascript:void 0;">{{ link.title }}</a></li>
                                {% elseif link.type == "page" %}
                                    <li>
                                        <a href="{{ path('page',{pageId:link.itemId,pageTitle:link.title}) }}"> {{ link.title }} </a>
                                    </li>
                                {% elseif link.type == "project" %}
                                    <li>
                                        <a href="{{ path('project',{pageId:link.itemId,projectTitle:link.title}) }}"> {{ link.title }} </a>
                                    </li>
                                {% endif %}
                                {% if not loop.last %}
                                    <li class="separator">&nbsp;</li>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    {% endfor %}
            </nav>
            <hgroup>
                <h1 class="primary"><a href="/">Ксения Пировских</a></h1>
                <h5 class="text-muted">
                    дизайн интерьеров и графический дизайн
                </h5>
            </hgroup>
        </header>
    </section>
    {% block content_noscript %}
    {% endblock %}
    <footer class="container" style="display: block;">
        <section class="small">
            <hr>
            © {{"now"|date('Y')}} Marc Paraiso. Ksenia Pirovskikh.<br>
            programming - marc paraiso : mparaiso@online.fr
        </section>
    </footer>
</noscript>