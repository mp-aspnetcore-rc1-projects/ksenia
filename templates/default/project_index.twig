{% extends 'layout.twig' %}
{% block content %}
    <header class="lead text-muted">
        Latest projects
    </header>
    <article>
        {% for project in projects %}
            <header class="lead"><a href="{{ path('project',{projectId:project.id}) }}">{{ project.title }}</a></header>
            <div class="text-muted">{{ project.client }}</div>
            <section class="row">
                {% for image in project.images[:8] %}
                    <div class="col-sm-3">
                        <a href="{{ path('image',{projectId:project.id,imageId:image.id}) }}">
                            <figure class="thumbnail">
                                <img style="height:150px;"
                                     src="{{ path('image_load',{projectId:project.id,imageId:image.id}) }}"
                                     alt="{{ image.title }}"/>

                            </figure>
                            <figcaption>{{ image.title }}</figcaption>
                        </a>
                    </div>
                {% endfor %}
            </section>
        {% endfor %}
    </article>
{% endblock %}