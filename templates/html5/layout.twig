<link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400' rel='stylesheet' type='text/css'>
<link rel="stylesheet" href="/static/css/reset.css">
<link rel="stylesheet" href="/static/css/style.css">
<style type="text/css">
    body {
        color: {{ app.settings.textColor|default('#444') }};
        background-color: {{ app.settings.backgroundColor|default('#EFEFEF') }};
    }

    .muted {
        color: {{ app.settings.textMuted|default('#AAA') }};
    }

    .primary {
        color: {{ app.settings.primaryColor|default('#20a3ea') }};
    }

    .secondary {
        color: {{ app.settings.primaryColor|default('#20a3ea') }};
    }

    .ternary {
        color: {{ app.settings.primaryColor|default('#20a3ea') }};
    }
</style>
</body>
</html>
